# ===============================================
# Exemple de fichier .env pour Docker / Kubernetes
# NE PAS COMMITER CE FICHIER AVEC DES VRAIES VALEURS
# ===============================================

# ---- Spring Boot ----
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# ---- Base de données PostgreSQL ----
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/paytogether
SPRING_DATASOURCE_USERNAME=paytogether
SPRING_DATASOURCE_PASSWORD=changeme

# ---- MinIO (Stockage d'images) ----
MINIO_ENDPOINT=http://minio:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=changeme
MINIO_BUCKET_NAME=paytogether-images
MINIO_PRESIGNED_URL_EXPIRATION=3600

# ---- JVM Options (peut être overridé) ----
JAVA_OPTS=-XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0 -XX:InitialRAMPercentage=50.0 -XX:+UseG1GC -XX:+UseStringDeduplication -Djava.security.egd=file:/dev/./urandom

# ---- Actuator (Monitoring) ----
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics,prometheus

# ---- Logging ----
LOGGING_LEVEL_ROOT=INFO
LOGGING_LEVEL_COM_ULR_PAYTOGETHER=DEBUG

# ---- JWT (si utilisé) ----
JWT_SECRET=changeme-super-secret-key-min-256-bits
JWT_EXPIRATION=86400000

# ---- CORS (Frontend) ----
CORS_ALLOWED_ORIGINS=https://dev.dealtogether.ca,http://localhost:5173

