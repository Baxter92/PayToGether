<project xmlns="http://maven.apache.org/POM/4.0.0">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.springframework.boot</groupId>
    <artifactId>spring-boot-starter-parent</artifactId>
    <version>3.4.5</version>
    <relativePath/> <!-- lookup parent from repository -->
  </parent>
  <groupId>com.ulr.paytogether</groupId>
  <version>0.0.1-SNAPSHOT</version>
  <artifactId>bff</artifactId>
  <name>bff project</name>
  <description>Microservice de gestion des projects</description>
  <packaging>pom</packaging>

  <properties>
    <java.version>21</java.version>
    <maven.compiler.source>21</maven.compiler.source>
    <maven.compiler.target>21</maven.compiler.target>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
  </properties>

  <modules>
    <module>bff-core</module>
    <module>bff-provider</module>
    <module>bff-wsclient</module>
    <module>bff-api</module>
    <module>bff-configuration</module>
    <module>bff-front</module>
  </modules>
</project>
