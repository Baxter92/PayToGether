<project xmlns="http://maven.apache.org/POM/4.0.0">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.ulr.paytogether</groupId>
    <artifactId>bff</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <relativePath>../../../pom.xml</relativePath>
  </parent>
  <artifactId>bff-api</artifactId>
  <packaging>jar</packaging>
  <name>bff-api</name>
  <description>Module REST API - Resources (Controllers), DTOs et Mappers</description>

  <dependencies>
    <!-- Dépendance vers bff-core (contient les services et entités) -->
    <dependency>
      <groupId>com.ulr.paytogether</groupId>
      <artifactId>bff-core</artifactId>
      <version>0.0.1-SNAPSHOT</version>
    </dependency>

    <!-- Dépendance vers bff-provider -->
    <dependency>
      <groupId>com.ulr.paytogether</groupId>
      <artifactId>bff-provider</artifactId>
      <version>0.0.1-SNAPSHOT</version>
    </dependency>

    <!-- Spring Boot Web -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-web</artifactId>
    </dependency>

    <!-- Lombok -->
    <dependency>
      <groupId>org.projectlombok</groupId>
      <artifactId>lombok</artifactId>
      <optional>true</optional>
    </dependency>

    <!-- Tests -->
    <dependency>
      <groupId>org.springframework.boot</groupId>
      <artifactId>spring-boot-starter-test</artifactId>
      <scope>test</scope>
    </dependency>

    <!-- Mockito pour les tests -->
    <dependency>
      <groupId>org.mockito</groupId>
      <artifactId>mockito-core</artifactId>
      <scope>test</scope>
    </dependency>
  </dependencies>
</project>
